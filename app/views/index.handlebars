<div class="container">
  <div class="row justify-content-center">
    <div class="col col-md-10">
      {{!-- Logo and Title Area --}}
      <div class="row">
        <div class="col text-center">
          <img src="/assets/img/burger1.png" class="my-4" id="burger-img" alt="Burger">
          <h3 class="mb-4">Eat-Da-Burger!</h3>
        </div>
      </div>
      {{!-- Burger Display --}}
      <div class="row">
        {{!-- Left Side Burger Display --}}
        <div class="col-6">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
              <div class="burger-li text-center mb-md-2">
                {{this.burger_name}}
              </div>
              <button type="button" class="devour-btn btn ml-3" data-id="{{id}}">Devour
                It</button>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- Right Side Burger Display --}}
        <div class="col-6">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li class="burger-li right-burger-li">
              {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
      {{!-- Burger Submit Form --}}
      <div class="row mb-5">
        <div class="col text-center">
          <form class="create-form">
            <div class="form-group">
              <input class="mt-3" type="text" name="burger_name" id="burger-input"><br>
              <input class="btn mt-2" type="submit" value="Submit">
            </div>
          </form>
          <p>Enter a burger you want to eat then click the "Submit" button</p>
        </div>
      </div>
    </div>
  </div>
</div>